<div id="navigation">
$lua{[[ 
lfs = require "lfs"
mods = {}
for file in lfs.dir(web.doc_root .. "/doc") do
    local attr = lfs.attributes (web.doc_root .. "/doc/"..file)
    if attr.mode == "directory" and file ~= "." and file ~= ".." then
        table.insert(mods, file)
    end
end
if #mods == 0 then mods[1] = "(None)" end
table.sort(mods)
]]}

<h1>Kepler</h1>
